{
    "name":"iTwitter",
    "version":"3.0",
    "manifest_version":2,
    "description":"Make the twitter simple, clear and easy.",
    "homepage_url":"https://twitter.com/ivane",
    "background": {
        "persistent": false,
        "page": "background.html"
    },
    "icons":{
        "16":"logo_16x16.png",
        "32":"logo_32x32.png",
        "64":"logo_64x64.png",
        "128":"logo_128x128.png"
    },
    "browser_action":{
        "default_icon":"logo_128x128.png",
        "default_title":"iTwitter"
    },
    "permissions":[
      "tabs"
    ],
    "content_scripts":[
        {
            "matches":["*://*.twitter.com/*"],
            "css":["itwitter.css"],
            "js":["itwitterload.js"]
        }
    ],
    "web_accessible_resources":[
        "itwitter.js"
    ]
}